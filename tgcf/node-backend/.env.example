# 生产环境配置示例文件
# 复制此文件为 .env 并根据实际情况修改

# ========================
# 服务器配置
# ========================
NODE_ENV=production
PORT=3003
HOST=0.0.0.0

# ========================
# 数据库配置
# ========================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_secure_database_password
DB_NAME=web_dao

# ========================
# 安全配置
# ========================
# JWT密钥 - 生产环境必须修改为强密码
JWT_SECRET=production_jwt_secret_key_change_this_in_production_environment

# ========================
# SSL配置 (可选)
# ========================
# 启用SSL (true/false)
SSL_ENABLED=false

# SSL证书路径 (启用SSL时需要配置)
SSL_KEY_PATH=/path/to/your_private.key
SSL_CERT_PATH=/path/to/your_certificate.crt

# ========================
# 域名配置
# ========================
# 支持的域名列表 (逗号分隔)
SUPPORTED_DOMAINS=dao.longlong.baby,longlong.baby,47.83.203.60,localhost

# ========================
# 性能配置
# ========================
# 静态文件缓存时间 (秒)
CACHE_MAX_AGE=3600

# 文件上传大小限制
MAX_FILE_SIZE=10mb

# ========================
# 日志配置
# ========================
# 日志级别: error, warn, info, debug
LOG_LEVEL=info

# 日志文件路径
LOG_FILE_PATH=./logs/production.log